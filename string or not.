import java.util.Scanner;

public class CharacterFinder {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.print("Enter a string: ");
        String inputString = scanner.nextLine();
        
        System.out.print("Enter a character to find: ");
        char characterToFind = scanner.next().charAt(0);
        
        boolean found = false;
        for (int i = 0; i < inputString.length(); i++) {
            if (inputString.charAt(i) == characterToFind) {
                System.out.println("Character '" + characterToFind + "' found at index: " + i);
                found = true;
                break; 
            }
        }
        
        if (!found) {
            System.out.println("Character '" + characterToFind + "' not found in the string.");
        }
    }
}
